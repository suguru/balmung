doctype html
html(ng-app='balmung')
  head
    meta(charset='utf8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/components/bootstrap/css/bootstrap.css')
    link(rel='stylesheet', href='/css/balmung.css')
    script(type='text/javascript', src='/components/jquery/jquery.min.js')
    script(type='text/javascript', src='/components/lodash/lodash.compat.js')
    script(type='text/javascript', src='/socket.io/socket.io.js')
    script(type='text/javascript', src='/components/angular/angular.js')
    script(type='text/javascript', src='/components/angular-route/angular-route.js')
    script(type='text/javascript', src='/components/angular-cookies/angular-cookies.js')
    script(type='text/javascript', src='/components/angular-animate/angular-animate.js')
    script(type='text/javascript', src='/components/angular-bootstrap/ui-bootstrap-tpls.js')
    script(type='text/javascript', src='/components/angular-growl/angular-growl.js')
    script(type='text/javascript', src='/js/balmung-controllers.js')
    script(type='text/javascript', src='/js/balmung-directives.js')
    script(type='text/javascript', src='/js/balmung-filters.js')
    script(type='text/javascript', src='/js/balmung-services.js')
    title Balmung - Image Optimizer
  body
    header
      .navbar.navbar-default.navbar-static-top(role='navigation' ng-controller='BalmungNavCtrl')
        .navbar-header
          a.navbar-brand(href='/') Balmung
        .navbar-collapse
          ul.nav.navbar-nav
            li(ng-repeat='item in items' ng-class='{ active: item.active }')
              a(href='{{item.link}}' ng-bind='item.label')
    block content
    div(growl)
